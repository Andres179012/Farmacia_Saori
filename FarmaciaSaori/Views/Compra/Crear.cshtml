    
@{ ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Home</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Registrar Compra</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Registrar Compra</h6>
                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card border-success">
                            <div class="card-header bg-gradient-1 text-white">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="input-group input-group-sm mb-2 p-2">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="inputGroupSelect01" style="background:white;">Tipo Documento</label>
                                            </div>
                                            <select class="custom-select" id="cboventatipodocumento">
                                                <option value="Factura">Factura</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="card-body p-2 card-venta">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card border-info">
                                            <div class="card-body card-compra p-2">
                                                <div class="row">

                                                    @*Laboratorios*@
                                                    <div class="col-sm-12">
                                                        <div class="card border-info border-top border-0 border-4">
                                                            <div class="card-body p-2">
                                                                <h6 class="card-title mb-1">Detalle Laboratorio</h6>
                                                                <div class="row align-items-end">
                                                                    <input id="txtIdLabProv" type="hidden" value="0" />
                                                                    <div class="col-sm-4">
                                                                        <input id="txtIdLaboratorio" type="hidden" value="0" />
                                                                        <label class="col-form-label col-form-label-sm">Laboratorio</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtRazonSocialLaboratorio" name="RazonSocial">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">

                                                                        <input id="txtIdProveedor" type="hidden" value="0" />
                                                                        <label class="col-form-label col-form-label-sm">Proveedor</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtRazonSocialProveedor" name="RazonSocial">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">RUC Proveedor</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtRuc" name="RUC">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Telefono Proveedor</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txttelefonoProveedor" name="Telefono">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Direccion Proveedor</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtDireccion" name="Direccion">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <div class="form-group mb-0">
                                                                            <button id="btnBuscarLaboratorioP" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscarLaboratorioP()"><i class="fas fa-search"></i> Buscar</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="row">

                                                    <div class="col-md-12">
                                                        <div class="card border-info border-top border-0 border-4">
                                                            <div class="card-body p-2">
                                                                <h6 class="card-title mb-1">Producto</h6>
                                                                <div class="row">
                                                                    <input id="txtIdProducto" type="hidden" value="0" />
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Codigo</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" id="txtCodigoProducto" name="Codigo" autocomplete="off">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Nombre</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtNombreProducto" name="Nombre">
                                                                        </div>
                                                                    </div>
                                                                    <input id="txtIdDetalleFarmaco" type="hidden" value="0" />
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Nombre Comercial</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtNombreComercial" name="NombreComercial">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Concentracion y Presentacion</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtConcentracion" name="Concentracion">
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Prescripcion Medica</label>
                                                                        <div class="input-group">
                                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtPrescripcionMedica" name="PrescripcionMedica">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <div class="form-group mb-0">
                                                                            <label for="btnBuscarTienda" class="col-form-label col-form-label-sm invisible">Buscar:</label>
                                                                            <button id="btnBuscarProducto" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscarProducto()"><i class="fas fa-search"></i> Buscar</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Cantidad</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="number" class="form-control border-start-0" id="txtCantidadProducto" name="Cantidad" value="0" min="1" pattern="[0-9]+" step="1" autocomplete="off" onkeypress="if (isNaN(String.fromCharCode(event.keyCode))) return false;">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Precio Compra</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="number" class="form-control border-start-0" id="txtPrecioCompraProducto" name="PrecioCompra" value="0" min="1" pattern="[0-9]+" step="1" autocomplete="off" onkeypress="if (isNaN(String.fromCharCode(event.keyCode))) return false;">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Precio Venta</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="number" class="form-control border-start-0" id="txtPrecioVentaProducto" name="PrecioVenta" value="0" min="1" pattern="[0-9]+" step="1" autocomplete="off" onkeypress="if (isNaN(String.fromCharCode(event.keyCode))) return false;">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <div class="form-group mb-0">
                                                            <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Vencimiento:</label><input type="date" id="start" name="trip-start"
                                                                                                                                                                   value="2022-01-01"
                                                                                                                                                                   min="2022-01-01" max="2050-01-01" class="form-control border-start-0 fechavencimientoproducto">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mt-2">
                                                    <div class="col-sm-12">
                                                        <button id="btnAgregarCompra" class="btn btn-success btn-sm float-right">
                                                            <i class="fas fa-plus"></i> Agregar a compra
                                                        </button>
                                                    </div>

                                                </div>

                                                <hr />
                                                <div class="row mt-3">
                                                    <div class="col-sm-12">
                                                        <div class="table-responsive-sm">
                                                            <table id="tbCompra" class="table table-striped table-bordered nowrap table-sm" style="width:100%">
                                                                <thead>
                                                                    <tr>
                                                                        <th></th>
                                                                        <th>Codigo Producto</th>
                                                                        <th>Nombre Generico</th>
                                                                        <th>Nombre Comercial</th>
                                                                        <th>Proveedor</th>
                                                                        <th>Laboratorio</th>
                                                                        <th>Cantidad</th>
                                                                        <th>Precio Compra</th>
                                                                        <th>Precio Venta</th>
                                                                        <th>Fecha Vencimiento</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody></tbody>
                                                            </table>

                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer bg-white border-info">
                                                <button id="btnTerminarGuardarCompra" class="btn btn-primary btn-sm float-right">
                                                    <i class="fas fa-tags"></i> Terminar y Guardar Compra
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <
        </div>
    </div>
</body>



