
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Laboratorio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Registrar</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                Lista de Laboratorio
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"> <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>NOmbre Laboratorio</th>
                                    <th>RUC</th>
                                    <th>Razon Social</th>
                                    <th>Telefono</th>
                                    <th>Correo</th>
                                    <th>Direccion</th>
                                    <th>Politica Vencimiento</th>
                                    <th>Cantidad Meses</th>
                                    <th>Activo</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header btn-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Categorias</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    @*<input id="txtid" name="IdRol" value="0" type="text" />*@
                    <input type="hidden" class="form-control form-control-sm model" id="txtid" name="IdLaboratorio">

                    <div class="form-group">
                        <label for="txtNombreLaboratorio" class="col-form-label">Laboratorio: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtNombreLaboratorio" name="Laboratorio">
                    </div>
                    <div class="form-group">
                        <label for="txtRUC" class="col-form-label">RUC: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtRUC" name="RUC">
                    </div>
                    <div class="form-group">
                        <label for="txtRazonSocial" class="col-form-label">Razon Social: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtRazonSocial" name="Razon Social">
                    </div>
                    <div class="form-group">
                        <label for="txtTelefono" class="col-form-label">Telefono: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtTelefono" name="Telefono">
                    </div>
                    <div class="form-group">
                        <label for="txtCorreo" class="col-form-label">Correo: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtCorreo" name="Correo">
                    </div>
                    <div class="form-group">
                        <label for="txtDireccion" class="col-form-label">Direccion: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtDireccion" name="Direccion">
                    </div>
                    <div class="form-group">
                        <label for="txtPoliticaVencimiento" class="col-form-label">Politica Vencimiento: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtPoliticaVencimiento" name="Politica Vencimiento">
                    </div>
                    <div class="form-group">
                        <label for="txtCantidadMeses" class="col-form-label">Cantidad Meses: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtCantidadMeses" name="Cantidad Meses">
                    </div>
                    <div class="form-group">
                        <label for="cboEstado" class="col-form-label">Estado:</label>
                        <select class="form-control form-control-sm model" id="cboEstado" name="Estado">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger px-5 radius-30" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success px-5 radius-30" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>
    </div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Laboratorio_Crear.js")" type="text/javascript"></script>
}

