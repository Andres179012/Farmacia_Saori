
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">DetalleFarmaco</a></li>
        <li class="breadcrumb-item active" aria-current="page">Registrar</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                Lista de Detalle Farmaco
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"> <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Forma Farmaceutica</th>
                                    <th>Via Administracion</th>
                                    <th>Proveedor</th>
                                    <th>Nombre Comercial</th>
                                    <th>Concentracion</th>
                                    <th>Precio Compra</th>
                                    <th>Precio Venta</th>
                                    <th>Prescripcion Medica</th>
                                    <th>Stock</th>
                                    <th>Iniciado</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Detalle Farmaco</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtid" class="model" value="0" type="hidden" />

                    <div class="form-group row">
                        <label for="txtProducto" class="col-sm-2 col-form-label col-form-label-sm">Producto</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="txtProducto" name="Producto"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtForma" class="col-sm-2 col-form-label col-form-label-sm">Forma Farmaceutica</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="txtForma" name="FormaFarmaceutica"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtVia" class="col-sm-2 col-form-label col-form-label-sm">Via Administracion</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="txtVia" name="ViaAdministracion"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtLaboratorio" class="col-sm-2 col-form-label col-form-label-sm">Laboratorio</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="txtLaboratorio" name="Laboratorio"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtProveedor" class="col-sm-2 col-form-label col-form-label-sm">Proveedor</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="txtProveedor" name="Proveedor"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtNombreComercial" class="col-sm-2 col-form-label col-form-label-sm">Nombre Comercial <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm required" id="txtNombreComercial" name="NombreComercial">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtConcentracion" class="col-sm-2 col-form-label col-form-label-sm">Concentracion <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm required" id="txtConcentracion" name="Concentracion">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtFechaVencimiento" class="col-sm-2 col-form-label col-form-label-sm">Fecha Vencimiento <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm required" id="txtFechaVencimiento" name="FechaVencimiento">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtPrecioVenta" class="col-sm-2 col-form-label col-form-label-sm">Precio Venta <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm required" id="txtPrecioVenta" name="PrecioVenta">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtPrecioCompra" class="col-sm-2 col-form-label col-form-label-sm">PrecioCompra <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm required" id="txtPrecioCompra" name="PrecioCompra">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtNumero" class="col-sm-2 col-form-label col-form-label-sm">Numero Lote <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm required" id="txtNumero" name="NumeroLote">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="cboEstado" class="col-sm-2 col-form-label col-form-label-sm">Prescripcion Medica</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="cboEstado" name="PrescripcionMedica">
                                <option value="1">Si</option>
                                <option value="0">No </option>
                            </select>
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardarCambios" type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/DetalleFarmaco_Crear.js")" type="text/javascript"></script>
}

