
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Home</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Detalle Farmaco</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class='bx bxs-edit'></i></button>
                        </div>
                    </div>
                </div>
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Detalle Farmaco</h6>
                <hr />
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="tbdata" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Nombre Comercial</th>
                                            <th>Concentracion</th>
                                            <th>Forma Farmaceutica</th>
                                            <th>Via Administracion</th>
                                            <th>Laboratorio</th>
                                            <th>Proveedor</th>
                                            <th>Prescripcion Medica</th>
                                            <th>Acciones</th>

                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Detalle Producto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="form">
                            <input id="txtid" class="model" value="0" type="hidden" />

                            <div class="form-group">
                                <label for="txtNombreComercial" class="col-form-label">Nombre Comercial <span class="error"></span></label>
                                <input type="text" class="form-control form-control-sm required" id="txtNombreComercial" name="NombreComercial">
                            </div>
                            <div class="form-group">
                                <label for="txtConcentracion" class="col-form-label">Concentracion <span class="error"></span></label>
                                <input type="text" class="form-control form-control-sm required" id="txtConcentracion" name="Concentracion">
                            </div>
                            <div class="form-group">
                                <label for="txtForma" class="col-form-label">Forma Farmaceutica</label>
                                <select class="form-control form-control-sm model" id="txtForma" name="FormaFarmaceutica"></select>
                            </div>
                            <div class="form-group">
                                <label for="txtVia" class="col-form-label">Via Administracion</label>
                                <select class="form-control form-control-sm model" id="txtVia" name="ViaAdministracion"></select>
                            </div>
                            <div class="form-group">
                                <label for="txtLaboratorio" class="col-form-label">Laboratorio</label>
                                <select class="form-control form-control-sm model" id="txtLaboratorio" name="Laboratorio"></select>
                            </div>
                            <div class="form-group">
                                <label for="txtProveedor" class="col-form-label">Proveedor</label>
                                <select class="form-control form-control-sm model" id="txtProveedor" name="Proveedor"></select>
                            </div>
                            <div class="form-group ">
                                <label for="txtFechaVencimiento" class="col-form-label">Fecha Vencimiento <span class="error"></span></label>
                                <input type="text" class="form-control form-control-sm required" id="txtFechaVencimiento" name="FechaVencimiento">
                            </div>
                            <div class="form-group">
                                <label for="txtNumero" class="col-form-label">Numero Lote <span class="error"></span></label>
                                <input type="text" class="form-control form-control-sm required" id="txtNumero" name="NumeroLote">
                            </div>
                            <div class="form-group">
                                <label for="cboEstado" class="col-form-label">Prescripcion Medica</label>
                                <select class="form-control form-control-sm model" id="cboEstado" name="PrescripcionMedica">
                                    <option value="1">Si</option>
                                    <option value="0">No </option>
                                </select>
                            </div>


                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class='bx bx-message-square-x mr-1'></i>Close</button>
                        <button id="btnGuardarCambios" type="button" class="btn btn-primary px-2" onclick="Guardar()"><i class='bx bx-message-square-check mr-1'></i>Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
        @section scripts{
            <script src="@Url.Content("~/Scripts/Views/DetalleFarmaco_Crear.js")" type="text/javascript"></script>
        }

</body>