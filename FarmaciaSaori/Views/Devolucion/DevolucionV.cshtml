
@{ ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Home</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Registrar Devolucion</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Registrar Devolucion</h6>
                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card border-info">
                            <div class="card-body card-compra p-2">
                                <div class="row">

                                    <div class="col-sm-12">
                                        <div class="card border-info">
                                            <div class="card-body p-2">
                                                <h6 class="card-title mb-1 text-success">Detalle Venta</h6>
                                                <div class="row align-items-end">
                                                    <input id="txtidventa" type="hidden" value="0" />
                                                    <div class="col-sm-2">
                                                        <label class="col-form-label col-form-label-sm">Venta No.</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtcodigoventa" name="Venta No.">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <input id="txtidcliente" type="hidden" value="0" />
                                                        <label class="col-form-label col-form-label-sm">Cliente</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtcliente" name="Nombre">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <label class="col-form-label col-form-label-sm">Fecha Venta</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtfechaventa" name="FechaVenta">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <input id="txtidusuario" type="hidden" value="0" />
                                                        <label class="col-form-label col-form-label-sm">Usuario</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtusuario" name="Correo">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group mb-0">
                                                            <button id="btnBuscarCompra" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscarDetalleCompra()"><i class="fas fa-search"></i> Buscar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="card border-info">
                                            <div class="card-body p-2">
                                                <h6 class="card-title mb-1 text-success">Producto</h6>
                                                <div class="row align-items-end">
                                                    <input id="txtidproducto" type="hidden" value="0" />
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Nombre Generico</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtnombregenerico" name="NombreGenerico">
                                                        </div>
                                                    </div>
                                                    <input id="txtiddetalleproducto" type="hidden" value="0" />
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Nombre Comercial</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtnombrecomercial" name="NombreComercial">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Concentracion</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtconcentracion" name="Concentracion">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Cantidad</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtcantidad" name="Cantidad">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Precio Venta</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txtprecioventa" name="Precioventa">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <label class="col-form-label col-form-label-sm">Total</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" readonly id="txttotalcosto" name="TotalCosto">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <label class="col-form-label col-form-label-sm">Cantidad a Devolver</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" id="txtcantidaddevolucion" name="CantidadDevolucion">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-5">
                                                        <label class="col-form-label col-form-label-sm">Concepto</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>
                                                            <input type="text" class="form-control border-start-0" id="txtconcepto" name="Concepto">
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="card-footer bg-white border-info">
                                    <button id="btnGuardarCambios" type="button" class="btn btn-primary px-2" onclick="Guardar()"><i class='bx bx-message-square-check mr-1'></i>Guardar</button>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</body>

<!-- MODAL DETALLE COMPRA -->
<div class="modal fade" id="modalCompra" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbDetalleFarmaco" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>FechaVenta</th>
                                <th>Usuario</th>
                                <th>Codigo</th>
                                <th>Cliente</th>
                                <th>Nombre Generico</th>
                                <th>Nombre Comercial</th>
                                <th>Concentracion</th>
                                <th>Cantidad</th>
                                <th>Precio Venta</th>
                                <th>Total Costo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL PROVEEDOR -->
<div class="modal fade" id="modalProveedor" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Proveedor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbProveedor" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>RUC</th>
                                <th>Razon Social</th>
                                <th>Direccion</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL PRODUCTOS -->
<div class="modal fade" id="modalProducto" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Productos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbProducto" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Codigo</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Stock</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


<!-- MODAL DEVOLUCION -->
<div class="modal fade" id="modalDevolucion" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Compra</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbCompra" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Producto</th>
                                <th>Proveedor </th>
                                <th>Cantidad</th>
                                <th>Total Costo</th>
                                <th>Fecha Compra</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="@Url.Content("~/Scripts/Views/DevolucionV_Crear.js")" type="text/javascript"></script>
}

