
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Home</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Registrar Devolucion</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class='bx bxs-edit'></i></button>
                        </div>
                    </div>
                </div>
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Registrar Devolucion</h6>
                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card border-info">
                            <div class="card-body card-compra p-2">
                                <div class="row">

                                    <div class="col-sm-6">
                                        <div class="card border-info">
                                            <div class="card-body p-2">
                                                <h6 class="card-title mb-1 text-success">Compra</h6>
                                                <div class="row align-items-end">
                                                    <input id="txtIdDetalleCompra" type="hidden" value="0" />
                                                    <div class="col-sm-4">
                                                        <div class="form-group mb-0">
                                                            <label for="txtProducto" class="col-form-label col-form-label-sm">Producto:</label>
                                                            <input type="text" class="form-control form-control-sm model" readonly id="txtProducto" name="Producto">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group mb-0">
                                                            <label for="txtProveedor" class="col-form-label col-form-label-sm">Proveedor :</label>
                                                            <input type="text" class="form-control form-control-sm model" readonly id="txtProveedor" name="Proveedor">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group mb-0">
                                                            <label for="txtCantidad" class="col-form-label col-form-label-sm">Cantidad :</label>
                                                            <input type="text" class="form-control form-control-sm model" readonly id="txtCantidad" name="Cantidad">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group mb-0">
                                                            <label for="txtTotal" class="col-form-label col-form-label-sm">Total :</label>
                                                            <input type="text" class="form-control form-control-sm model" readonly id="txtTotal" name="TotalCosto">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group mb-0">
                                                            <label for="txtFecha" class="col-form-label col-form-label-sm">Fecha Compra :</label>
                                                            <input type="text" class="form-control form-control-sm model" readonly id="txtFecha" name="FechaRegistro">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group mb-0">
                                                            <button id="btnBuscarDevolucion" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscarDevolucion()"><i class="fas fa-search"></i> Buscar</button>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group mb-0">
                                                            <label for="txtCantidadD" class="col-form-label col-form-label-sm">Cantidad a Devolver:</label>
                                                            <input type="text" class="form-control form-control-sm model" id="txtCantidadD" name="Cantidad" value="0">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group mb-0">
                                                            <label for="txtConcepto" class="col-form-label col-form-label-sm">Concepto:</label>
                                                            <input type="text" class="form-control form-control-sm model" id="txtConcepto" name="Concepto" value="0">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row mt-2">
                                        <div class="col-sm-12">
                                            <button id="btnAgregarCompra" class="btn btn-success btn-sm float-right">
                                                <i class="fas fa-plus"></i> Agregar a Devolucion
                                            </button>
                                        </div>

                                    </div>

                                    <hr />
                                    <div class="row mt-3">
                                        <div class="col-sm-12">
                                            <div class="table-responsive-sm">
                                                <table id="tbCompra" class="table table-striped table-bordered nowrap table-sm" style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th>Precio Compra</th>
                                                            <th>Precio Venta</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-white border-info">
                                    <button id="btnTerminarGuardarCompra" class="btn btn-primary btn-sm float-right">
                                        <i class="fas fa-tags"></i> Terminar y Guardar Compra
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</body>



<!-- MODAL DEVOLUCION -->
<div class="modal fade" id="modalDevolucion" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Compra</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbCompra" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Producto</th>
                                <th>Proveedor </th>
                                <th>Cantidad</th>
                                <th>Total Costo</th>
                                <th>Fecha Compra</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="@Url.Content("~/Scripts/Views/Devolucion_Crear.js")" type="text/javascript"></script>
}

