@model CapaModelo.Laboratorios
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Home</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Laboratorios</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class='bx bxs-edit'></i></button>
                        </div>
                    </div>
                </div>
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Laboratorios</h6>
                <hr />
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="tbdata" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Codigo</th>
                                            <th>Laboratorio</th>
                                            <th>Direccion</th>
                                            <th>Telefono</th>
                                            <th>Politica de Vencimiento</th>
                                            <th>Cantidad de Meses</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <!-- Modal -->
    <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header btn-info text-white">
                    <h5 class="modal-title" id="exampleModalLabel">Laboratorios</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">
                    <form id="form">
                        @*<input id="txtid" name="IdRol" value="0" type="text" />*@
                        <input type="hidden" class="form-control form-control-sm model" id="txtid" name="Id_Laboratorio">

                        <div class="form-group">
                            <label for="txtNombreLaboratorio" class="col-form-label">Laboratorio: <span class="error"></span></label>
                            <input type="text" class="form-control form-control-sm model" id="txtNombreLaboratorio" name="Laboratorio">
                        </div>
                        <div class="form-group">
                            <label for="txtDireccion" class="col-form-label">Direccion: <span class="error"></span></label>
                            <input type="text" class="form-control form-control-sm model" id="txtDireccion" name="Direccion">
                        </div>
                        <div class="form-group">
                            <label for="txtTelefono" class="col-form-label">Telefono: <span class="error"></span></label>
                            <input type="text" class="form-control form-control-sm model" id="txtTelefono" name="Telefono">
                        </div>                        
                        <div class="form-group">
                            <label for="txtPoliticaVencimiento" class="col-form-label">Politica de Vencimiento: <span class="error"></span></label>
                            <input type="text" class="form-control form-control-sm model" id="txtPoliticaVencimiento" name="Politica de Vencimiento">
                        </div>                     
                        <div class="form-group">
                            <label for="txtCantidadMeses" class="col-form-label">Cantidad Meses: <span class="error"></span></label>
                            <input type="text" class="form-control form-control-sm model" id="txtCantidadMeses" name="Cantidad Meses">
                        </div>
                        <div class="form-group">
                            <label for="cboEstado" class="col-form-label">Estado:</label>
                            <select class="form-control form-control-sm model" id="cboEstado" name="Estado">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger px-5 radius-30" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success px-5 radius-30" onclick="Guardar()">Guardar</button>
                </div>
            </div>
        </div>
        </div>
    </div>
    @section Scripts{

        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/Laboratorio_Crear.js"></script>
    }
</body>
